prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libexecdir=@libexecdir@
datadir=@datadir@
mandir=@mandir@
sysconfdir=@sysconfdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
top_builddir=@top_builddir@
builddir=@builddir@

DESTDIR=
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@ -s -m755


CXX=@CXX@
CC=@CC@
#CFLAGS = @CFLAGS@ -DSTS -fomit-frame-pointer
CFLAGS = @CFLAGS@ -DSTS 

#CPPFLAGS=-I$(srcdir) -I$(top_srcdir)/include @CPPFLAGS@ 
CPPFLAGS=-I$(srcdir) -I$(top_srcdir)/opcode -I$(top_srcdir)/builtins @CPPFLAGS@ 

OBJS = 	main.o assembler.o hash_table.o   
OPCODE = $(top_builddir)/opcode/opcode.o
BUILTINS = $(top_builddir)/builtins/builtins.o

TARGET=masm

all:    $(TARGET)

clean: 
	rm -f *.o

distclean: clean 
	rm -f Makefile $(TARGET)

install:
	$(INSTALL) -d $(DESTDIR)$(bindir) 
	$(INSTALL_PROGRAM) $(TARGET) $(DESTDIR)$(bindir)/. 

uninstall:
	-rm -f $(DESTDIR)$(bindir)/masm

uninstallall:	uninstall
	-rmdir $(DESTDIR)$(bindir)


masm:	$(OBJS) $(OPCODE) $(BUILTINS)
	$(CXX) -o masm $(OBJS) $(OPCODE) $(BUILTINS) $(LIB)

%.o:%.cc %.h $(srcdir)/assembler.h
	$(CXX) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

%.o:%.cc $(srcdir)/assembler.h
	$(CXX) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

